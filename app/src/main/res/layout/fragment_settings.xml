<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B8B8B8"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:background="#466551">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="76dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/default_profile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toTopOf="@+id/tvUsername"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/sniglet"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/sniglet"
            android:textSize="25dp"
            android:text="User Settings" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ibChangepp"
            android:layout_width="352dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/frame_13"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivEditUsername"
            android:layout_width="352dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/frame_16"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivEditPassword"
            android:layout_width="352dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/frame_17"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ibLogout"
            android:layout_width="352dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/frame_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/sniglet"
            android:textSize="25dp"
            android:text="App Settings" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ibAbout"
            android:layout_width="352dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/frame_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>




</FrameLayout>